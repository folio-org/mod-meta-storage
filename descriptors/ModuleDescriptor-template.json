{
  "id": "${artifactId}-${version}",
  "name": "Meta storage",
  "provides": [
    {
      "id": "_tenant",
      "version": "2.0",
      "interfaceType": "system",
      "handlers": [
        {
          "methods": [
            "POST"
          ],
          "pathPattern": "/_/tenant"
        },
        {
          "methods": [
            "GET",
            "DELETE"
          ],
          "pathPattern": "/_/tenant/{id}"
        }
      ]
    },
    {
      "id": "meta-storage-config-oai",
      "version": "1.0",
      "handlers": [
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/meta-storage/config/oai",
          "permissionsRequired": [
            "meta-storage-config-oai.get"
          ]
        },
        {
          "methods": [
            "PUT"
          ],
          "pathPattern": "/meta-storage/config/oai",
          "permissionsRequired": [
            "meta-storage-config-oai.put"
          ]
        }
      ]
    },
    {
      "id": "meta-storage-config-matchkeys",
      "version": "1.0",
      "handlers": [
        {
          "methods": [
            "POST"
          ],
          "pathPattern": "/meta-storage/config/matchkeys",
          "permissionsRequired": [
            "meta-storage-config-matchkeys.item.post"
          ]
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/meta-storage/config/matchkeys",
          "permissionsRequired": [
            "meta-storage-config-matchkeys.collection.get"
          ]
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/meta-storage/config/matchkeys/{id}",
          "permissionsRequired": [
            "meta-storage-config-matchkeys.item.get"
          ]
        },
        {
          "methods": [
            "PUT"
          ],
          "pathPattern": "/meta-storage/config/matchkeys/{id}",
          "permissionsRequired": [
            "meta-storage-config-matchkeys.item.put"
          ]
        },
        {
          "methods": [
            "DELETE"
          ],
          "pathPattern": "/meta-storage/config/matchkeys/{id}",
          "permissionsRequired": [
            "meta-storage-config-matchkeys.item.delete"
          ]
        },
        {
          "methods": [
            "PUT"
          ],
          "pathPattern": "/meta-storage/config/matchkeys/{id}/initialize",
          "permissionsRequired": [
            "meta-storage-config-matchkeys.item.initialize"
          ]
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/meta-storage/config/matchkeys/{id}/stats",
          "permissionsRequired": [
            "meta-storage-config-matchkeys.item.stats"
          ]
        }
      ]
    },
    {
      "id": "meta-storage-config-modules",
      "version": "1.0",
      "handlers": [
        {
          "methods": [
            "POST"
          ],
          "pathPattern": "/meta-storage/config/modules",
          "permissionsRequired": [
            "meta-storage-config-modules.item.post"
          ]
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/meta-storage/config/modules",
          "permissionsRequired": [
            "meta-storage-config-modules.collection.get"
          ]
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/meta-storage/config/modules/{id}",
          "permissionsRequired": [
            "meta-storage-config-modules.item.get"
          ]
        },
        {
          "methods": [
            "PUT"
          ],
          "pathPattern": "/meta-storage/config/modules/{id}",
          "permissionsRequired": [
            "meta-storage-config-modules.item.put"
          ]
        },
        {
          "methods": [
            "DELETE"
          ],
          "pathPattern": "/meta-storage/config/modules/{id}",
          "permissionsRequired": [
            "meta-storage-config-modules.item.delete"
          ]
        }
      ]
    },
    {
      "id": "meta-storage-records",
      "version": "1.0",
      "handlers": [
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/meta-storage/records",
          "permissionsRequired": [
            "meta-storage-records.collection.get"
          ]
        },
        {
          "methods": [
            "PUT"
          ],
          "pathPattern": "/meta-storage/records",
          "permissionsRequired": [
            "meta-storage-records.put"
          ]
        },
        {
          "methods": [
            "DELETE"
          ],
          "pathPattern": "/meta-storage/records",
          "permissionsRequired": [
            "meta-storage-records.delete"
          ]
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/meta-storage/records/{globalId}",
          "permissionsRequired": [
            "meta-storage-records.item.get"
          ]
        }
      ]
    },
    {
      "id": "meta-storage-clusters",
      "version": "1.0",
      "handlers": [
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/meta-storage/clusters",
          "permissionsRequired": [
            "meta-storage-clusters.collection.get"
          ]
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/meta-storage/clusters/{clusterId}",
          "permissionsRequired": [
            "meta-storage-clusters.item.get"
          ]
        }
      ]
    },
    {
      "id": "meta-storage-oai",
      "version": "1.0",
      "handlers": [
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/meta-storage/oai",
          "permissionsRequired": [ ]
        }
      ]
    }
  ],
  "requires": [],
  "permissionSets": [
    {
      "permissionName": "meta-storage-config-oai.get",
      "displayName": "meta storage - retrieve OAI configuration",
      "description": "Retrieve OAI configuration"
    },
    {
      "permissionName": "meta-storage-config-oai.put",
      "displayName": "meta storage - update OAI configuration",
      "description": "Update OAI configurations"
    },
    {
      "permissionName": "meta-storage-config-oai.all",
      "displayName": "meta storage - all OAI configuration permissions",
      "description": "All OAI configuration permissions",
      "subPermissions": [
        "meta-storage-config-oai.get",
        "meta-storage-config-oai.put"
     ]
    },
    {
      "permissionName": "meta-storage-config-matchkeys.item.post",
      "displayName": "meta storage - create match key configuration",
      "description": "Create match key configuration"
    },
    {
      "permissionName": "meta-storage-config-matchkeys.collection.get",
      "displayName": "meta storage - get match key configurations",
      "description": "Get match key configurations"
    },
    {
      "permissionName": "meta-storage-config-matchkeys.item.get",
      "displayName": "meta storage - get match key configuration",
      "description": "Get match key configuration"
    },
    {
      "permissionName": "meta-storage-config-matchkeys.item.put",
      "displayName": "meta storage - update match key configuration",
      "description": "Update match key configuration"
    },
    {
      "permissionName": "meta-storage-config-matchkeys.item.delete",
      "displayName": "meta storage - delete match key configuration",
      "description": "Delete match key configuration"
    },
    {
      "permissionName": "meta-storage-config-matchkeys.item.initialize",
      "displayName": "meta storage - initialize match key configuration",
      "description": "Initialize match key configuration"
    },
    {
      "permissionName": "meta-storage-config-matchkeys.item.stats",
      "displayName": "meta storage - get match key statistics",
      "description": "Get match key statistics"
    },
    {
      "permissionName": "meta-storage-config-matchkeys.all",
      "displayName": "meta storage - all match key configuration",
      "description": "All match key configuration",
      "subPermissions": [
        "meta-storage-config-matchkeys.item.post",
        "meta-storage-config-matchkeys.collection.get",
        "meta-storage-config-matchkeys.item.get",
        "meta-storage-config-matchkeys.item.put",
        "meta-storage-config-matchkeys.item.delete",
        "meta-storage-config-matchkeys.item.initialize",
        "meta-storage-config-matchkeys.item.stats"
     ]
    },
    {
      "permissionName": "meta-storage-config-modules.item.post",
      "displayName": "meta storage - create code module",
      "description": "Create code module config"
    },
    {
      "permissionName": "meta-storage-config-modules.collection.get",
      "displayName": "meta storage - retrieve all code modules",
      "description": "Read all code modules configs"
    },
    {
      "permissionName": "meta-storage-config-modules.item.get",
      "displayName": "meta storage - retrieve code module",
      "description": "Read code module config"
    },
    {
      "permissionName": "meta-storage-config-modules.item.put",
      "displayName": "meta storage - update code module",
      "description": "Update code module config"
    },
    {
      "permissionName": "meta-storage-config-modules.item.delete",
      "displayName": "meta storage - delete code module",
      "description": "Delete code module config"
    },
    {
      "permissionName": "meta-storage-config-modules.all",
      "displayName": "meta storage - all code modules configuration",
      "description": "All code modules configuration",
      "subPermissions": [
        "meta-storage-config-modules.item.post",
        "meta-storage-config-modules.collection.get",
        "meta-storage-config-modules.item.get",
        "meta-storage-config-modules.item.put",
        "meta-storage-config-modules.item.delete"
     ]
    },
    {
      "permissionName": "meta-storage-records.collection.get",
      "displayName": "meta storage - get records",
      "description": "Get records"
    },
    {
      "permissionName": "meta-storage-records.put",
      "displayName": "meta storage - ingest records",
      "description": "Ingest records"
    },
    {
      "permissionName": "meta-storage-records.delete",
      "displayName": "meta storage - delete records",
      "description": "Delete records"
    },
    {
      "permissionName": "meta-storage-records.item.get",
      "displayName": "meta storage - get record",
      "description": "Get record by globalId"
    },
    {
      "permissionName": "meta-storage-records.all",
      "displayName": "meta storage - record management",
      "description": "Record management",
      "subPermissions": [
        "meta-storage-records.collection.get",
        "meta-storage-records.put",
        "meta-storage-records.delete",
        "meta-storage-records.item.get"
      ]
    },
    {
      "permissionName": "meta-storage-clusters.collection.get",
      "displayName": "meta storage - get clusters",
      "description": "Get clusters"
    },
    {
      "permissionName": "meta-storage-clusters.item.get",
      "displayName": "meta storage - get cluster",
      "description": "Get cluster"
    },
    {
      "permissionName": "meta-storage-clusters.all",
      "displayName": "meta storage - clusters",
      "description": "Clusters permissions",
      "subPermissions": [
        "meta-storage-clusters.collection.get",
        "meta-storage-clusters.item.get"
      ]
    },
    {
      "permissionName": "meta-storage.all",
      "displayName": "meta storage - all permissions",
      "description": "All permissions",
      "subPermissions": [
        "meta-storage-config-oai.all",
        "meta-storage-config-matchkeys.all",
        "meta-storage-config-modules.all",
        "meta-storage-records.all",
        "meta-storage-clusters.all"
      ]
    }
  ],
  "launchDescriptor": {
    "dockerImage": "${artifactId}:${version}",
    "dockerPull": false,
    "dockerArgs": {
      "HostConfig": {
        "Memory": 536870912,
        "PortBindings": {
          "8081/tcp": [
            {
              "HostPort": "%p"
            }
          ]
        }
      }
    },
    "env": [
      {
        "name": "JAVA_OPTIONS",
        "value": "-XX:MaxRAMPercentage=66.0"
      },
      {
        "name": "DB_HOST",
        "value": "postgres"
      },
      {
        "name": "DB_PORT",
        "value": "5432"
      },
      {
        "name": "DB_USERNAME",
        "value": "folio_admin"
      },
      {
        "name": "DB_PASSWORD",
        "value": "folio_admin"
      },
      {
        "name": "DB_DATABASE",
        "value": "okapi_modules"
      },
      {
        "name": "DB_MAXPOOLSIZE",
        "value": "5"
      }
    ]
  }
}
