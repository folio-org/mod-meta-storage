{
  "description": "OAI PMH client configuration",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "OAI PMH Client identifier"
    },
    "headers": {
      "type" : "object",
      "description" : "HTTP headers to be used against OAI server"
    },
    "set" : {
      "type" : "string",
      "description" : "OAI PMH set as returned in verb=ListSets"
    },
    "url" : {
      "type" : "string",
      "description" : "OAI PMH server prefix so that PREFIX?verb=.. works"
    },
    "from" : {
      "type" : "string",
      "description" : "OAI PMH from date"
    },
    "until" : {
      "type" : "string",
      "description" : "OAI PMH until date"
    },
    "resumptionToken" : {
      "type" : "string",
      "description" : "OAI PMH resumption token"
    },
    "limit" : {
      "type" : "integer",
      "description" : "Number of records to return in one chunk (non-standard parameter)"
    },
    "sourceId" : {
      "type" : "string",
      "description" : "Source identifier"
    }
  },
  "additionalProperties": false,
  "required": [
    "id", "url", "sourceId"
  ]
}

